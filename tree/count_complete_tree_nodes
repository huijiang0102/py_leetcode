# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def countNodes(self, root):
        """
        :type root: TreeNode
        :rtype: int
        """
        if root == None:
            return 0
        leftmost = 0
        left = root
        right = root
        while left != None:
            leftmost += 1
            left = left.left
        rightmost = 0
        while right != None:
            rightmost += 1
            right = right.right
        if rightmost == leftmost:
            return int(math.pow(2,leftmost)) - 1
        return 1 + self.countNodes(root.left) + self.countNodes(root.right)
        
        #[1,2,3,4,5,6] 6
